extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
					div.signup-wall
						form(class='form-signin', action='/create', method='POST')
							input(type='text', name='name', class='form-control', placeholder='hw name',required, autofocus)
							input(type='date', name='deadline', class='form-control', placeholder='',required)
							textarea(rows="12", cols="113", name="content", placeholder='Homework Requirement', class='form-control')
							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
						a(href='/home', class='text-center new-account') Back