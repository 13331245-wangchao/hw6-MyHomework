extends layout
	
block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
					div.signup-wall
						form(class='form-signin', action='/changedl/#{myrequirement.name}', method='POST')
							input(type='date', name='deadline', class='form-control', placeholder='#{myrequirement.deadline}',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Change
					a(href='/home', class='text-center new-account') Back