extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title HomeWork Create
					div.signup-wall
						form(class='form-signin', action='/hwcreate', method='POST')
							input(type='text', name='hwname', class='form-control', placeholder='hw name',required, autofocus)
							input(type='date', name='hwddl', class='form-control', placeholder='hw ddl',required)
							input(type='text', name='hwrequest', class='form-control', placeholder='hw request',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}