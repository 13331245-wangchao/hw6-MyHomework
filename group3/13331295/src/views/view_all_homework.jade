extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        .homework-display-wall
          each homework in homeworks
            .homework-display
              |作业名称：#{homework.homeworkName}
              a(href='/edit_homework') (编辑)
              br
              |作业要求： #{homework.homeworkDemand}
              br
              |截至日期: #{homework.homeworkDeadline}
              br
              |作业详情:
              .homework-info
                form.score-form(method='post')
                  |StudentA:********* Score:**
                  input.score-given(type='text' placeholder='Enter Score')
                  button.score-btn(type='submit') Correct
                form.score-form(method='post')
                  |StudentB:********* Score:**
                  input.score-given(type='text' placeholder='Enter Score')
                  button.score-btn(type='submit') Correct
        a(href='/home' class='text-center new-account') Back to Home