extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					div.signup-wall
						span.time Current Time
						br
						span.timeing #{time}
					h1.text-center.login-title Welcome #{user.username}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li Status    ---> #{user.status}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
						a(href='/viewrequirement', class='text-center new-account') View All Requirements
						if user.status == 'T'
							a(href='/viewhomework', class='text-center new-account') View All Homeworks
							a(href='/create', class='text-center new-account') Create An Homework
						if user.status == 'S'
							a(href='/viewhomework', class='text-center new-account') View Your Homework
						a(href='/signout', class='text-center new-account') Sign Out
