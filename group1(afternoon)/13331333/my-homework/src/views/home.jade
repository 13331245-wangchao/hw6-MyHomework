extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
						if user.identity == 'teacher'
							a(href='/ask' class='text-center new-account') Ask
						a(href='/question' class='text-center new-account') Questions
						a(href='/score' class='text-center new-account') Score
						a(href='/signout', class='text-center new-account') Sign Out