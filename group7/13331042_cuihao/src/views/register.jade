extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") MyHomework
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="#")
              | Sign up
              span.sr-only (current)
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") wellcome, please
          li
            a(href="/") log in
          li
            a(href="#") /
          li
            a(href="#") sign up

  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Registration Details
          div.signup-wall
            form(class='form-signin', action='/signup', method='POST')
              input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
              input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
              input(type='email', name='email', class='form-control', placeholder='Email',required)
              input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
              input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
              .form-control
                label.radio-inline
                  input#optionsRadios1(type="radio", name="identity", value="student" checked)
                  | student
                label.radio-inline
                  input#optionsRadios2(type="radio", name="identity", value="teacher")
                  | teacher
              button(class='btn btn-lg btn-primary btn-block', type='submit') Register
              span.clearfix
          a(href='/', class='text-center new-account') I have an account
          #message
            if message
              h1.text-center.error-message #{message}
