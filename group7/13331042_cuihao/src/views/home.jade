extends layout

block content
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/") MyHomework
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					li.active
						a(href="#") 
							| Welcome
							span.sr-only (current)
				ul.nav.navbar-nav.navbar-right
					li
						a(href="#") wellcome,
					li.dropdown
						a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
							| #{user.firstName}
							span.caret
						ul.dropdown-menu(role="menu")
							li
								a(href="/home") My Info
							li
								a(href="/signout") Log Out


	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					if user.identity == 'student' 
						h1.text-center.login-title Welcome #{user.firstName}(student). Check your details below:
							div.signup-wall
								ul.user-details.center-block
									li Username ---> #{user.username}
									li Email    ---> #{user.email}
									li First Name ---> #{user.firstName} 
									li Last Name ---> #{user.lastName}
							a(href='/allhomework', class='text-center new-account') View homework list
					else
						h1.text-center.login-title Welcome #{user.firstName}(teacher). Check your details below:
							div.signup-wall
								ul.user-details.center-block
									li Username ---> #{user.username}
									li Email    ---> #{user.email}
									li First Name ---> #{user.firstName} 
									li Last Name ---> #{user.lastName}
							a(href='/allhomework', class='text-center new-account') View homework list