extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-2
				span.h4 Hello #{user.firstName}.
			div.col-sm-6.col-md-2.col-md-offset-8
				a(href='/signout', class='text-center new-account') Sign Out
		div.row
			div.col-sm-12.col-md-6.col-md-offset-3
				div.h3 Here are all the problems:
				ul
					each val in homework
							li 
								a(href="/homework/#{val.id}") #{val.title}
					else
						li There are not any problems.