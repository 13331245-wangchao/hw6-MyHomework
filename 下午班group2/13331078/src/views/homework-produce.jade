extends layout

block content
	div.nav.navbar.navbar-inverse.navbar-fixed-top
		div.container
			div.user-info
				#user
				p.navbar-text Welcome #{user.firstName}.#{user.lastName}!
			div.sign-out
				a.btn.navbar-btn.home-btn(href='/home') Home
				a.btn.navbar-btn.signout-btn(href='/signout') Signout
	div.produce-homework
		div.col-sm-6.col-md-4.col-md-offset-4
			h1.text-center.login-title Produce Homework
			form(action='/hw-produce' method='POST')
				div.input-group
					input.form-control(name='produced-question-content' type='text' placeholder='Write new homework...')
					input.form-control(name='produced-question-date' type='date')
					button.btn.btn-lg.btn-primary.btn-block(type='submit') Publish
					